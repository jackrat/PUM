<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="Kalendarze"
        android:textSize="18dp"
        android:background="#073E09"
        android:textColor="#fff"
        />


    <ListView
        android:id="@+id/lv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:maxHeight="100dp"
        android:background="#EEFFEE"
        app:layout_constraintTop_toBottomOf="@id/tv00" />

    <TextView
        android:id="@+id/lb_evs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lv1"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="Zdarzenia"
        android:textSize="18dp"
        android:background="#073E09"
        android:textColor="#fff"
        />
    <ListView
        android:id="@+id/lv2"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:background="#EEFFEE"
        app:layout_constraintTop_toBottomOf="@id/lb_evs"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"

        />



</android.support.constraint.ConstraintLayout>